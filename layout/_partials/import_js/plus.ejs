<script type="text/ls-javascript" id="back-button-script">
  /* back button */
  (function() {
    var backBtn = document.querySelector('button[back]')
    if (backBtn !== null)
    backBtn.addEventListener('click', function() {
        window.history.back();
    })
  })();
</script>

